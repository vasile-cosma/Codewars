import java.util.Scanner;

public class Solucion2 {
public static Scanner sc = new Scanner(System.in);
	public static void main(String[] args) {
		int n = sc.nextInt();
		while (n!=0) {
			int a = 0;
			for (int i = 0; i<n; i++) {
				int p = sc.nextInt();
				int c = sc.nextInt();
				a += p-c;
			}
			System.out.println(a);
			n = sc.nextInt();
		} 
	}

}
