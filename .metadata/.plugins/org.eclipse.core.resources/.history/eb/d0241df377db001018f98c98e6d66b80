	public static String reverseWords(final String original) {
		String[] arrayCadenas = original.split(" ");
		for (int i = 0; i<arrayCadenas.length; i++) {
			arrayCadenas[i] =  invertirCadena(arrayCadenas[i]);
		}
		return String.join(" ", arrayCadenas);
	}

private static String invertirCadena(String string) {
	return new StringBuilder(string).reverse().toString();
}
	
}
