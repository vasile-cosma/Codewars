// NOTA: cast de char a int usa ASCII
public class Kata {
	public static String rot13(String str) {
		StringBuilder sb = new StringBuilder(str);
		StringBuilder sb2 = new StringBuilder();
		for (int i = 0; i < sb.length(); i++) {
			char c = sb.charAt(i);
			if (Character.isAlphabetic(c)) {
				if (Character.isUpperCase(c)) {
					c = rot13Mayusculas(c);
				} else {
					c = rot13Minusculas(c);
				}
			}
			sb2.append(c);
		}
		return sb2.toString();
	}

	public static char rot13Mayusculas(char c) {
		int ini = (int) c;
		if (ini + 13 > 90)
			return (char) (65 + (13 - (90 - ini)));
		else
			return (char) (13 + ini);
	}

	public static char rot13Minusculas(char c) {
		int ini = (int) c;
		if (ini + 13 > 122)
			return (char) (96 + 13 - (122 - ini));
		else
			return (char) (13 + ini);
	}
}