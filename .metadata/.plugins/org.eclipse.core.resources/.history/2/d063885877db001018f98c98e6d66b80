import java.util.ArrayList;

public class Kata {
	public static String reverseWords(final String original) {
		//EPIC FAIL:
		
		String[] arrayCadenas = original.split(" ");
		System.out.println(original);
		System.out.println(arrayCadenas.length);
		ArrayList<String> nuevoArray = new ArrayList<String>();
		boolean primera = true;
		for (String string : arrayCadenas) {
			StringBuilder sb2 = new StringBuilder(string);
			sb2.reverse();
			if (!primera) {
				nuevoArray.add(" ");
			}
			nuevoArray.add(sb2.toString());
			primera = false;
		}

		StringBuilder sb = new StringBuilder();
		for (String string : nuevoArray) {
			sb.append(string);
		}

		System.out.println(sb.toString());
		return sb.toString();
				
				//sb.deleteCharAt(sb.length()).toString();
		
		
	}
}
